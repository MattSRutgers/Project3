                                 <children>
                                    <RadioButton mnemonicParsing="false" selected="true" text="Manager">
                                       <toggleGroup>
                                          <ToggleGroup fx:id="managerCode" />
                                       </toggleGroup>
                                    </RadioButton>
                                    <RadioButton mnemonicParsing="false" prefHeight="17.0" prefWidth="126.0" text="Department Head" toggleGroup="$managerCode" />
